---
import MainLayout from '../layouts/MainLayout.astro';
import ResourceCard from '../components/ResourceCard.astro';
import { getResourceByTitle } from '../utils/resources.js';

// Find the GitHub resource dynamically using utility function
const githubResource = await getResourceByTitle("github");

if (!githubResource) {
  throw new Error("GitHub resource not found in resources.json");
}
---

<MainLayout 
  title="GitHub - Git, Version Control & AI-Powered Development | Kelifax" 
  description="Comprehensive guide to GitHub: Git version control, GitHub Actions for CI/CD, GitHub Copilot for AI-assisted coding, and collaborative development workflows."
  currentPage="github"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-gray-900" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold mb-6">{githubResource.title}</h1>
        <p class="text-xl md:text-2xl text-gray-300 max-w-4xl mx-auto mb-8">
          {githubResource.description}
        </p>
        <div class="flex flex-wrap justify-center gap-3 mb-8">
          {githubResource.tags.slice(0, 6).map((tag) => (
            <span class="bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-medium">
              {tag}
            </span>
          ))}
        </div>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a 
            href={githubResource.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-3 bg-white text-gray-900 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
          >
            Visit GitHub
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
          <a 
            href={`/resources/${githubResource.id}`}
            class="inline-flex items-center px-8 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-gray-900 transition-colors"
          >
            View Details
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  {githubResource.keyFeatures && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Key Features</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {githubResource.keyFeatures.map((feature) => (
            <div class="bg-gray-50 rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Use Cases Section -->
  {githubResource.useCases && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Use Cases</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {githubResource.useCases.map((useCase) => (
            <div class="flex items-start space-x-4 bg-white p-6 rounded-lg shadow-sm">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
              <p class="text-gray-700">{useCase}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Learning Resources Section -->
  {githubResource.learningResources && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Learning Resources</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {githubResource.learningResources.map((resource) => (
            <a 
              href={resource.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="block bg-gray-50 rounded-lg p-6 hover:shadow-lg hover:bg-gray-100 transition-all group"
            >
              <div class="flex items-center justify-between mb-3">
                <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
                  {resource.type}
                </span>
                <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                {resource.title}
              </h3>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Call to Action -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Start with GitHub?</h2>
      <p class="text-xl text-blue-100 mb-8">
        Join millions of developers using GitHub for version control, collaboration, and automated workflows.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="https://github.com/signup" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
        >
          Sign Up for GitHub
        </a>
        <a 
          href="/resources"
          class="inline-flex items-center px-8 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-blue-600 transition-colors"
        >
          Explore More Resources
        </a>
      </div>
    </div>
  </section>

  <!-- Resource Card Section (for consistency) -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-center text-gray-900 mb-8">Resource Overview</h2>
      <div class="max-w-md mx-auto">
        <ResourceCard {...githubResource} />
      </div>
    </div>
  </section>
</MainLayout>
