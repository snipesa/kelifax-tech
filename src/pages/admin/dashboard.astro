---
// filepath: /Users/ashimeetunyi/Desktop/code/kelifax/src/pages/admin/dashboard.astro
import MainLayout from '../../layouts/MainLayout.astro';
import PendingResourcesList from '../../components/PendingResourcesList.astro';
import ResourceManager from '../../components/ResourceManager.astro';
---

<MainLayout title="Admin Dashboard - Kelifax">
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
            <p class="mt-1 text-sm text-gray-600">Manage Kelifax resources and approvals</p>
          </div>
          <div class="flex items-center space-x-4">
            <span id="admin-username" class="text-sm text-gray-600"></span>
            <button
              id="logout-button"
              class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Logout
            </button>
          </div>
        </div>
      </div>

      <!-- Dashboard Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Pending Resources Section -->
        <div>
          <PendingResourcesList />
        </div>

        <!-- Resource Manager Section -->
        <div>
          <ResourceManager />
        </div>
      </div>
    </div>
  </div>

  <script>
    import { requireAdminAuth, logoutAdmin, isAdminAuthenticated } from '../../utils/admin-auth.js';

    // Check authentication on page load
    if (!isAdminAuthenticated()) {
      // Redirect to admin login
      window.location.href = '/admin';
    } else {
      // Display user info if authenticated
      const usernameElement = document.getElementById('admin-username');
      const idToken = localStorage.getItem('kelifax_cognito_id_token');
      if (idToken && usernameElement) {
        try {
          // Decode JWT to get user info (simple base64 decode for display)
          const payload = JSON.parse(atob(idToken.split('.')[1]));
          const email = payload.email || 'Admin User';
          usernameElement.textContent = `Logged in as: ${email}`;
        } catch (error) {
          usernameElement.textContent = 'Logged in as: Admin User';
        }
      }
    }

    // Logout button handler
    const logoutButton = document.getElementById('logout-button');
    if (logoutButton) {
      logoutButton.addEventListener('click', () => {
        if (confirm('Are you sure you want to logout?')) {
          logoutAdmin();
        }
      });
    }
  </script>
</MainLayout>
