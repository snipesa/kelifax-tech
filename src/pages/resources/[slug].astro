---
import MainLayout from '../../layouts/MainLayout.astro';
import { getAllResources, getRelatedResources } from '../../utils/resources.js';
import { API_CONFIG, APP_CONFIG } from '../../utils/config.js';

export async function getStaticPaths() {
  const resources = await getAllResources();
  return resources.map((resource) => ({
    params: { slug: resource.slug },
    props: { resource }
  }));
}

const { resource } = Astro.props;

// Get related resources using utility function
const relatedResources = await getRelatedResources(resource, APP_CONFIG.RELATED_RESOURCES_COUNT);

// Pass environment variables to the client
const apiConfig = {
  apiUrl: API_CONFIG.BASE_URL,
  apiKey: API_CONFIG.API_KEY
};
---

<MainLayout 
  title={`${resource.title} - Kelifax`}
  description={`${resource.description} - Find this and more curated tech resources on Kelifax.`}
  currentPage="resources"
>
  <!-- API Loading Indicator (Hidden initially) -->
  <div id="api-loading-indicator" class="hidden fixed top-4 right-4 bg-blue-600 text-white px-4 py-2 rounded-lg shadow-lg z-50">
    <div class="flex items-center space-x-2">
      <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white"></div>
      <span class="text-sm">Loading enhanced details...</span>
    </div>
  </div>

  <!-- Breadcrumb -->
  <section class="bg-gray-50 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center space-x-2 text-sm text-gray-600">
        <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <a href="/resources" class="hover:text-blue-600 transition-colors">Resources</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-900 capitalize">{resource.category}</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-500">{resource.title}</span>
      </nav>
    </div>
  </section>

  <!-- Resource Content -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Resource Image/Logo -->
          <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg mb-8 relative overflow-hidden flex items-center justify-center">
            {resource.image ? (
              <img 
                src={`/logos/${resource.image}`}
                alt={resource.title}
                class="max-w-48 max-h-32 object-contain"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <div class="w-24 h-24 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                  <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                </div>
              </div>
            )}
            
            <!-- Category Badge -->
            <div class="absolute top-4 left-4">
              <span class="bg-blue-600 text-white text-sm font-semibold px-3 py-1 rounded-full capitalize">
                {resource.category}
              </span>
            </div>
            
            <!-- Featured Badge -->
            {resource.featured && (
              <div class="absolute top-4 right-4">
                <span class="bg-yellow-400 text-yellow-900 text-sm font-semibold px-3 py-1 rounded-full">
                  Featured
                </span>
              </div>
            )}
          </div>

          <!-- Resource Details -->
          <div class="space-y-6">
            <div>
              <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                {resource.title}
              </h1>
              <p id="resource-description" class="text-xl text-gray-600 leading-relaxed">
                {resource.description}
              </p>
            </div>

            <!-- Tags -->
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Tags</h3>
              <div id="resource-tags" class="flex flex-wrap gap-2">
                {resource.tags.map((tag) => (
                  <span class="bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-md hover:bg-gray-200 transition-colors cursor-pointer">
                    {tag}
                  </span>
                ))}
              </div>
            </div>

            <!-- Enhanced Content from API (Hidden initially) -->
            <div id="enhanced-content" class="space-y-6">
              <!-- Key Features Section -->
              <div id="key-features-section" class="hidden">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Key Features</h3>
                <ul id="key-features-list" class="space-y-3 text-gray-600">
                  <!-- Features will be dynamically inserted -->
                </ul>
              </div>

              <!-- Use Cases Section -->
              <div id="use-cases-section" class="hidden">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Use Cases</h3>
                <ul id="use-cases-list" class="space-y-2 text-gray-600">
                  <!-- Use cases will be dynamically inserted -->
                </ul>
              </div>

              <!-- Learning Resources Section -->
              <div id="learning-resources-section" class="hidden">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Learning Resources</h3>
                <div id="learning-resources-list" class="space-y-3">
                  <!-- Learning resources will be dynamically inserted -->
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="space-y-6">
            <!-- Visit Resource CTA -->
            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Access Resource</h3>
              <a 
                href={resource.url}
                target="_blank"
                rel="noopener noreferrer"
                class="w-full inline-flex items-center justify-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors mb-4"
              >
                Visit {resource.title}
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
              
              <div class="text-sm text-gray-600 space-y-2">
                <p class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Verified and curated
                </p>
                <p class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Regularly updated
                </p>
                <p class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Community recommended
                </p>
              </div>
            </div>

            <!-- Resource Info -->
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Resource Details</h3>
              <dl class="space-y-3">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Category</dt>
                  <dd class="text-sm text-gray-900 capitalize">{resource.category}</dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Total Tags</dt>
                  <dd id="tags-count" class="text-sm text-gray-900">{resource.tags.length}</dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Status</dt>
                  <dd class="text-sm text-gray-900">
                    {resource.featured ? 'Featured Resource' : 'Active'}
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Data Source</dt>
                  <dd id="data-source" class="text-sm text-gray-900">Local</dd>
                </div>
              </dl>
            </div>

            <!-- Report Issue -->
            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Found an issue?</h3>
              <p class="text-sm text-gray-600 mb-4">
                Help us keep our resources up to date by reporting any issues.
              </p>
              <button class="w-full bg-gray-100 hover:bg-gray-200 text-gray-900 font-medium py-2 px-4 rounded-lg transition-colors">
                Report Issue
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Resources -->
  {relatedResources.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">
          More {resource.category} resources
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedResources.map((related) => (
            <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
              <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-200 relative flex items-center justify-center">
                {related.image ? (
                  <img 
                    src={`/logos/${related.image}`}
                    alt={related.title}
                    class="max-w-24 max-h-16 object-contain"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                      </svg>
                    </div>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">
                  <a href={`/resources/${related.slug}`} class="hover:text-blue-600 transition-colors">
                    {related.title}
                  </a>
                </h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  {related.description}
                </p>
                <a 
                  href={`/resources/${related.slug}`}
                  class="inline-flex items-center text-blue-600 hover:text-blue-700 text-sm font-medium"
                >
                  Learn more
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
</MainLayout>

<script define:vars={{ apiConfig }}>
  /**
   * Resource Detail Page Client-Side Enhancement
   * 
   * This script fetches enhanced resource data from the API and dynamically
   * updates the page with additional features like key features, use cases,
   * and learning resources.
   * 
   * Features:
   * - Fetches enhanced data from DynamoDB via API Gateway
   * - Graceful fallback to local data if API fails
   * - Loading indicators for better UX
   * - Dynamic content injection
   */

  // API configuration from server-side
  const API_BASE_URL = apiConfig.apiUrl;
  const API_KEY = apiConfig.apiKey;

  // Get the resource slug from the URL
  const pathSegments = window.location.pathname.split('/');
  const resourceSlug = pathSegments[pathSegments.length - 1];

  /**
   * Fetch resource details from API
   * @param {string} slug - Resource slug identifier
   * @returns {Promise<Object>} Enhanced resource data
   */
  async function getResourceDetails(slug) {
    try {
      console.log('Starting API request for slug:', slug);
      console.log('API URL:', `${API_BASE_URL}/get-resource`);
      
      const headers = {
        'Content-Type': 'application/json',
      };
      
      // Add API key if available (using correct case)
      if (API_KEY) {
        headers['X-Api-Key'] = API_KEY;
        console.log('API key added to headers');
      } else {
        console.warn('No API key available');
      }
      
      console.log('Request headers:', headers);
      console.log('Request body:', JSON.stringify({ slug: slug }));
      
      const response = await fetch(`${API_BASE_URL}/get-resource`, {
        method: 'POST',
        headers: headers,
        body: JSON.stringify({
          slug: slug
        })
      });
      
      console.log('Response status:', response.status);
      console.log('Response headers:', [...response.headers]);
      
      if (!response.ok) {
        const errorText = await response.text();
        console.error('Response error text:', errorText);
        throw new Error(`API request failed: ${response.status} ${response.statusText}`);
      }

      const data = await response.json();
      console.log('Response data:', data);
      
      if (data.success && data.data) {
        return data.data;
      } else {
        throw new Error(data.message || 'Resource details not found');
      }
    } catch (error) {
      console.error('Failed to fetch resource details:', error);
      throw error;
    }
  }

  /**
   * Create and display key features section
   * @param {Array} keyFeatures - Array of feature objects with title and description
   */
  function createKeyFeaturesHTML(keyFeatures) {
    const featuresSection = document.getElementById('key-features-section');
    const featuresList = document.getElementById('key-features-list');
    
    featuresList.innerHTML = '';
    
    keyFeatures.forEach(feature => {
      const featureItem = document.createElement('li');
      featureItem.className = 'flex items-start space-x-3';
      featureItem.innerHTML = `
        <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <strong class="text-gray-900">${feature.title}</strong>
          <p class="text-sm text-gray-600 mt-1">${feature.description}</p>
        </div>
      `;
      featuresList.appendChild(featureItem);
    });
    
    featuresSection.classList.remove('hidden');
  }

  /**
   * Create and display use cases section
   * @param {Array} useCases - Array of use case strings
   */
  function createUseCasesHTML(useCases) {
    const useCasesSection = document.getElementById('use-cases-section');
    const useCasesList = document.getElementById('use-cases-list');
    
    useCasesList.innerHTML = '';
    
    useCases.forEach(useCase => {
      const useCaseItem = document.createElement('li');
      useCaseItem.className = 'flex items-start space-x-2';
      useCaseItem.innerHTML = `
        <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span>${useCase}</span>
      `;
      useCasesList.appendChild(useCaseItem);
    });
    
    useCasesSection.classList.remove('hidden');
  }

  /**
   * Create and display learning resources section
   * @param {Array} learningResources - Array of learning resource objects
   */
  function createLearningResourcesHTML(learningResources) {
    const learningSection = document.getElementById('learning-resources-section');
    const learningList = document.getElementById('learning-resources-list');
    
    learningList.innerHTML = '';
    
    learningResources.forEach(resource => {
      const resourceItem = document.createElement('div');
      resourceItem.className = 'border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors';
      resourceItem.innerHTML = `
        <div class="flex items-center justify-between">
          <div>
            <h4 class="font-semibold text-gray-900">${resource.title}</h4>
            <span class="text-sm text-blue-600 bg-blue-50 px-2 py-1 rounded mt-1 inline-block">
              ${resource.type}
            </span>
          </div>
          <a 
            href="${resource.url}"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center space-x-1 text-blue-600 hover:text-blue-800 transition-colors"
          >
            <span class="text-sm">Visit</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      `;
      learningList.appendChild(resourceItem);
    });
    
    learningSection.classList.remove('hidden');
  }

  /**
   * Update the data source indicator in the sidebar
   * @param {boolean} hasEnhancedData - Whether enhanced data was loaded from API
   */
  function updateDataSource(hasEnhancedData) {
    const dataSourceElement = document.getElementById('data-source');
    if (dataSourceElement) {
      dataSourceElement.textContent = hasEnhancedData ? 'API + Local' : 'Local';
    }
  }

  /**
   * Main function to load and display enhanced resource details
   * Handles API requests, data processing, and UI updates
   */
  async function loadResourceDetails() {
    // Show API loading indicator
    const indicator = document.getElementById('api-loading-indicator');
    if (indicator) {
      indicator.classList.remove('hidden');
    }

    try {
      console.log('Fetching resource details for:', resourceSlug);
      console.log('API Base URL:', API_BASE_URL);
      console.log('API Key available:', !!API_KEY);
      
      // Fetch resource details from DynamoDB via API
      const detailedResource = await getResourceDetails(resourceSlug);
      
      console.log('Received resource data:', detailedResource);
      
      let hasEnhancedData = false;

      // Update dynamic content with detailed data
      if (detailedResource.keyFeatures && detailedResource.keyFeatures.length > 0) {
        console.log('Creating key features section');
        createKeyFeaturesHTML(detailedResource.keyFeatures);
        hasEnhancedData = true;
      }
      
      if (detailedResource.useCases && detailedResource.useCases.length > 0) {
        console.log('Creating use cases section');
        createUseCasesHTML(detailedResource.useCases);
        hasEnhancedData = true;
      }
      
      if (detailedResource.learningResources && detailedResource.learningResources.length > 0) {
        console.log('Creating learning resources section');
        createLearningResourcesHTML(detailedResource.learningResources);
        hasEnhancedData = true;
      }
      
      // Update description if it's more detailed in API response
      if (detailedResource.description) {
        const descriptionElement = document.getElementById('resource-description');
        if (descriptionElement) {
          descriptionElement.textContent = detailedResource.description;
        }
      }
      
      // Update tags if they're more comprehensive in API response
      if (detailedResource.tags && detailedResource.tags.length > 0) {
        const tagsContainer = document.getElementById('resource-tags');
        if (tagsContainer) {
          tagsContainer.innerHTML = '';
          detailedResource.tags.forEach(tag => {
            const tagElement = document.createElement('span');
            tagElement.className = 'bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-md hover:bg-gray-200 transition-colors cursor-pointer';
            tagElement.textContent = tag;
            tagsContainer.appendChild(tagElement);
          });
          
          // Update tags count
          const tagsCountElement = document.getElementById('tags-count');
          if (tagsCountElement) {
            tagsCountElement.textContent = detailedResource.tags.length;
          }
        }
      }

      // Update data source indicator
      updateDataSource(hasEnhancedData);
      
    } catch (error) {
      console.error('Error loading enhanced resource details:', error);
      console.log('Gracefully continuing with basic info from local JSON');
      // Gracefully continue with basic info even if API fails
    } finally {
      // Hide API loading indicator
      const indicator = document.getElementById('api-loading-indicator');
      if (indicator) {
        indicator.classList.add('hidden');
      }
    }
  }

  /**
   * Initialize the page when DOM is loaded
   * Sets up event listeners and triggers initial data loading
   */
  document.addEventListener('DOMContentLoaded', () => {
    console.log('Page loaded, API Config:', apiConfig);
    console.log('Resource slug:', resourceSlug);
    console.log('API_BASE_URL:', API_BASE_URL);
    console.log('API_KEY:', API_KEY);
    
    // Load resource details from API
    loadResourceDetails();
  });
</script>