<script define:vars={{ resourceSlug: resource.slug }}>
  // API configuration
  const API_BASE_URL = 'https://af3e78t7db.execute-api.us-east-1.amazonaws.com/dev';

  // Generic API request function
  async function apiRequest(endpoint, options = {}) {
    const url = `${API_BASE_URL}${endpoint}`;
    
    const defaultHeaders = {
      'Content-Type': 'application/json',
    };

    const defaultOptions = {
      headers: defaultHeaders,
    };

    const config = {
      ...defaultOptions,
      ...options,
      headers: {
        ...defaultOptions.headers,
        ...options.headers,
      },
    };

    try {
      const response = await fetch(url, config);
      
      if (!response.ok) {
        throw new Error(`API request failed: ${response.status} ${response.statusText}`);
      }

      const data = await response.json();
      return data;
    } catch (error) {
      console.error('API Request Error:', error);
      throw error;
    }
  }

  // Function to get enhanced resource details from API
  async function getEnhancedResourceDetails(slug) {
    try {
      console.log('ðŸ”„ Fetching enhanced resource details for:', slug);
      
      // Call the API to get enhanced resource details from DynamoDB
      const response = await apiRequest(`/resources/${slug}`);
      
      // Handle the response format from your Lambda function
      if (response.success && response.data) {
        return response.data;
      } else {
        throw new Error(response.message || 'Enhanced resource details not found');
      }
    } catch (error) {
      console.error('âŒ Failed to fetch enhanced resource details:', error);
      throw error;
    }
  }

  // Function to show API loading indicator
  function showAPILoading() {
    const indicator = document.getElementById('api-loading-indicator');
    if (indicator) {
      indicator.classList.remove('hidden');
    }
  }

  // Function to hide API loading indicator
  function hideAPILoading() {
    const indicator = document.getElementById('api-loading-indicator');
    if (indicator) {
      indicator.classList.add('hidden');
    }
  }

  // Function to create key features HTML
  function addKeyFeatures(keyFeatures) {
    const featuresSection = document.getElementById('key-features-section');
    const featuresList = document.getElementById('key-features-list');
    
    featuresList.innerHTML = '';
    
    keyFeatures.forEach(feature => {
      const featureItem = document.createElement('li');
      featureItem.className = 'flex items-start space-x-3';
      featureItem.innerHTML = `
        <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <strong class="text-gray-900">${feature.title}</strong>
          <p class="text-sm text-gray-600 mt-1">${feature.description}</p>
        </div>
      `;
      featuresList.appendChild(featureItem);
    });
    
    featuresSection.classList.remove('hidden');
  }

  // Function to create use cases HTML
  function addUseCases(useCases) {
    const useCasesSection = document.getElementById('use-cases-section');
    const useCasesList = document.getElementById('use-cases-list');
    
    useCasesList.innerHTML = '';
    
    useCases.forEach(useCase => {
      const useCaseItem = document.createElement('li');
      useCaseItem.className = 'flex items-start space-x-2';
      useCaseItem.innerHTML = `
        <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span>${useCase}</span>
      `;
      useCasesList.appendChild(useCaseItem);
    });
    
    useCasesSection.classList.remove('hidden');
  }

  // Function to create learning resources HTML
  function addLearningResources(learningResources) {
    const learningSection = document.getElementById('learning-resources-section');
    const learningList = document.getElementById('learning-resources-list');
    
    learningList.innerHTML = '';
    
    learningResources.forEach(resource => {
      const resourceItem = document.createElement('div');
      resourceItem.className = 'border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors';
      resourceItem.innerHTML = `
        <div class="flex items-center justify-between">
          <div>
            <h4 class="font-semibold text-gray-900">${resource.title}</h4>
            <span class="text-sm text-blue-600 bg-blue-50 px-2 py-1 rounded mt-1 inline-block">
              ${resource.type}
            </span>
          </div>
          <a 
            href="${resource.url}" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center space-x-1 text-blue-600 hover:text-blue-800 transition-colors"
          >
            <span class="text-sm">Visit</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      `;
      learningList.appendChild(resourceItem);
    });
    
    learningSection.classList.remove('hidden');
  }

  // Function to update existing content with enhanced data
  function updateWithEnhancedData(enhancedResource) {
    // Update description if more detailed
    if (enhancedResource.description && enhancedResource.description.length > 0) {
      const descriptionElement = document.getElementById('resource-description');
      if (descriptionElement && enhancedResource.description !== descriptionElement.textContent.trim()) {
        descriptionElement.textContent = enhancedResource.description;
      }
    }
    
    // Update tags if more comprehensive
    if (enhancedResource.tags && enhancedResource.tags.length > 0) {
      const tagsContainer = document.getElementById('resource-tags');
      const tagsCountElement = document.getElementById('tags-count');
      
      if (tagsContainer) {
        tagsContainer.innerHTML = '';
        enhancedResource.tags.forEach(tag => {
          const tagElement = document.createElement('span');
          tagElement.className = 'bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-md hover:bg-gray-200 transition-colors cursor-pointer';
          tagElement.textContent = tag;
          tagsContainer.appendChild(tagElement);
        });
        
        // Update tags count
        if (tagsCountElement) {
          tagsCountElement.textContent = enhancedResource.tags.length;
        }
      }
    }
    
    // Update data source indicator
    const dataSourceElement = document.getElementById('data-source');
    if (dataSourceElement) {
      dataSourceElement.textContent = 'API Enhanced';
      dataSourceElement.classList.add('text-blue-600');
    }
  }

  // Function to load enhanced data from API
  async function loadEnhancedData() {
    try {
      showAPILoading();
      
      // Fetch enhanced resource data from API
      const enhancedResource = await getEnhancedResourceDetails(resourceSlug);
      
      console.log('âœ… Enhanced resource data loaded:', enhancedResource);
      
      // Update existing content with enhanced data
      updateWithEnhancedData(enhancedResource);
      
      // Add new sections if they exist in API response
      if (enhancedResource.keyFeatures && enhancedResource.keyFeatures.length > 0) {
        addKeyFeatures(enhancedResource.keyFeatures);
      }
      
      if (enhancedResource.useCases && enhancedResource.useCases.length > 0) {
        addUseCases(enhancedResource.useCases);
      }
      
      if (enhancedResource.learningResources && enhancedResource.learningResources.length > 0) {
        addLearningResources(enhancedResource.learningResources);
      }
      
    } catch (error) {
      console.warn('âš ï¸ Could not load enhanced data from API:', error);
      // Silently fail - user still sees the basic content from local JSON
    } finally {
      hideAPILoading();
    }
  }

  // Social sharing functions
  function shareOnTwitter() {
    const url = encodeURIComponent(window.location.href);
    const text = encodeURIComponent(document.title);
    window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
  }

  function shareOnLinkedIn() {
    const url = encodeURIComponent(window.location.href);
    window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}`, '_blank');
  }

  async function copyLink() {
    try {
      await navigator.clipboard.writeText(window.location.href);
      
      // Simple notification
      const originalButton = event.target.closest('button');
      const originalText = originalButton.querySelector('span').textContent;
      originalButton.querySelector('span').textContent = 'Copied!';
      
      setTimeout(() => {
        originalButton.querySelector('span').textContent = originalText;
      }, 2000);
    } catch (err) {
      console.error('Failed to copy link:', err);
    }
  }

  // Initialize enhanced data loading when page loads
  document.addEventListener('DOMContentLoaded', () => {
    // Small delay to let the page render first
    setTimeout(() => {
      loadEnhancedData();
    }, 100);
  });
</script>
