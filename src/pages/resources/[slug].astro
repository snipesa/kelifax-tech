<script define:vars={{ apiConfig }}>
  // API configuration from server-side
  const API_BASE_URL = apiConfig.apiUrl;
  const API_KEY = apiConfig.apiKey;

  // Function to get resource details from API
  async function getResourceDetails(slug) {
    try {
      const headers = {
        'Content-Type': 'application/json',
      };
      
      // Add API key if available
      if (API_KEY) {
        headers['x-api-key'] = API_KEY;
      }
      
      const response = await fetch(`${API_BASE_URL}/get-resource`, {
        method: 'POST',
        headers: headers,
        body: JSON.stringify({
          slug: slug
        })
      });
      
      if (!response.ok) {
        throw new Error(`API request failed: ${response.status} ${response.statusText}`);
      }

      const data = await response.json();
      
      if (data.success && data.data) {
        return data.data;
      } else {
        throw new Error(data.message || 'Resource details not found');
      }
    } catch (error) {
      console.error('Failed to fetch resource details:', error);
      throw error;
    }
  }

  // Get the resource slug from the URL
  const pathSegments = window.location.pathname.split('/');
  const resourceSlug = pathSegments[pathSegments.length - 1];

  // Function to create key features HTML
  function createKeyFeaturesHTML(keyFeatures) {
    const featuresSection = document.getElementById('key-features-section');
    const featuresList = document.getElementById('key-features-list');
    
    featuresList.innerHTML = '';
    
    keyFeatures.forEach(feature => {
      const featureItem = document.createElement('li');
      featureItem.className = 'flex items-start space-x-3';
      featureItem.innerHTML = `
        <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <div>
          <strong class="text-gray-900">${feature.title}</strong>
          <p class="text-sm text-gray-600 mt-1">${feature.description}</p>
        </div>
      `;
      featuresList.appendChild(featureItem);
    });
    
    featuresSection.classList.remove('hidden');
  }

  // Function to create use cases HTML
  function createUseCasesHTML(useCases) {
    const useCasesSection = document.getElementById('use-cases-section');
    const useCasesList = document.getElementById('use-cases-list');
    
    useCasesList.innerHTML = '';
    
    useCases.forEach(useCase => {
      const useCaseItem = document.createElement('li');
      useCaseItem.className = 'flex items-start space-x-2';
      useCaseItem.innerHTML = `
        <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span>${useCase}</span>
      `;
      useCasesList.appendChild(useCaseItem);
    });
    
    useCasesSection.classList.remove('hidden');
  }

  // Function to create learning resources HTML
  function createLearningResourcesHTML(learningResources) {
    const learningSection = document.getElementById('learning-resources-section');
    const learningList = document.getElementById('learning-resources-list');
    
    learningList.innerHTML = '';
    
    learningResources.forEach(resource => {
      const resourceItem = document.createElement('div');
      resourceItem.className = 'border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors';
      resourceItem.innerHTML = `
        <div class="flex items-center justify-between">
          <div>
            <h4 class="font-semibold text-gray-900">${resource.title}</h4>
            <span class="text-sm text-blue-600 bg-blue-50 px-2 py-1 rounded mt-1 inline-block">
              ${resource.type}
            </span>
          </div>
          <a 
            href="${resource.url}" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center space-x-1 text-blue-600 hover:text-blue-800 transition-colors"
          >
            <span class="text-sm">Visit</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      `;
      learningList.appendChild(resourceItem);
    });
    
    learningSection.classList.remove('hidden');
  }

  // Function to load resource details from API
  async function loadResourceDetails() {
    // Show API loading indicator
    const indicator = document.getElementById('api-loading-indicator');
    if (indicator) {
      indicator.classList.remove('hidden');
    }

    try {
      console.log('Fetching resource details for:', resourceSlug);
      console.log('API Base URL:', API_BASE_URL);
      console.log('API Key available:', !!API_KEY);
      
      // Fetch resource details from DynamoDB via API
      const detailedResource = await getResourceDetails(resourceSlug);
      
      console.log('Received resource data:', detailedResource);
      
      // Update dynamic content with detailed data
      if (detailedResource.keyFeatures && detailedResource.keyFeatures.length > 0) {
        console.log('Creating key features section');
        createKeyFeaturesHTML(detailedResource.keyFeatures);
      }
      
      if (detailedResource.useCases && detailedResource.useCases.length > 0) {
        console.log('Creating use cases section');
        createUseCasesHTML(detailedResource.useCases);
      }
      
      if (detailedResource.learningResources && detailedResource.learningResources.length > 0) {
        console.log('Creating learning resources section');
        createLearningResourcesHTML(detailedResource.learningResources);
      }
      
      // Update description if it's more detailed in API response
      if (detailedResource.description) {
        const descriptionElement = document.getElementById('resource-description');
        if (descriptionElement) {
          descriptionElement.textContent = detailedResource.description;
        }
      }
      
      // Update tags if they're more comprehensive in API response
      if (detailedResource.tags && detailedResource.tags.length > 0) {
        const tagsContainer = document.getElementById('resource-tags');
        if (tagsContainer) {
          tagsContainer.innerHTML = '';
          detailedResource.tags.forEach(tag => {
            const tagElement = document.createElement('span');
            tagElement.className = 'bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-md hover:bg-gray-200 transition-colors cursor-pointer';
            tagElement.textContent = tag;
            tagsContainer.appendChild(tagElement);
          });
        }
      }
      
    } catch (error) {
      console.error('Error loading enhanced resource details:', error);
      console.log('Gracefully continuing with basic info from local JSON');
      // Gracefully continue with basic info even if API fails
    } finally {
      // Hide API loading indicator
      const indicator = document.getElementById('api-loading-indicator');
      if (indicator) {
        indicator.classList.add('hidden');
      }
    }
  }

  // Function to setup social sharing
  function setupSocialSharing() {
    // Copy link functionality
    const copyButton = document.querySelector('button:has(span:contains("Copy Link"))');
    if (copyButton) {
      copyButton.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(window.location.href);
          
          // Update button text temporarily
          const span = copyButton.querySelector('span');
          const originalText = span.textContent;
          span.textContent = 'Copied!';
          
          setTimeout(() => {
            span.textContent = originalText;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy link:', err);
        }
      });
    }

    // Social sharing functionality
    const twitterButton = document.querySelector('button:has(span:contains("Twitter"))');
    if (twitterButton) {
      twitterButton.addEventListener('click', () => {
        const url = encodeURIComponent(window.location.href);
        const text = encodeURIComponent(document.title);
        window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
      });
    }

    const linkedinButton = document.querySelector('button:has(span:contains("LinkedIn"))');
    if (linkedinButton) {
      linkedinButton.addEventListener('click', () => {
        const url = encodeURIComponent(window.location.href);
        window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}`, '_blank');
      });
    }
  }

  // Initialize the page
  document.addEventListener('DOMContentLoaded', () => {
    // Load resource details from API
    loadResourceDetails();
    
    // Setup social sharing functionality
    setupSocialSharing();
  });
</script>
