---
import MainLayout from '../../layouts/MainLayout.astro';
import { getAllResources, getRelatedResources } from '../../utils/resources.js';

export async function getStaticPaths() {
  const resources = await getAllResources();
  return resources.map((resource) => ({
    params: { slug: resource.slug },
    props: { resource }
  }));
}

const { resource } = Astro.props;

// Get related resources using utility function
const relatedResources = await getRelatedResources(resource, 3);

// Pass environment variables to the client
const apiConfig = {
  apiUrl: import.meta.env.PUBLIC_API_URL || 'https://af3e78t7db.execute-api.us-east-1.amazonaws.com/dev',
  apiKey: import.meta.env.PUBLIC_API_KEY
};
