---
import MainLayout from '../../layouts/MainLayout.astro';
import { getAllResources, getResourceBySlug, getRelatedResources } from '../../utils/resources.js';

export async function getStaticPaths() {
  const resources = await getAllResources();
  return resources.map((resource) => ({
    params: { slug: resource.slug },
    props: { resource }
  }));
}

const { resource } = Astro.props;

// Get related resources using utility function
const relatedResources = await getRelatedResources(resource, 3);
---

<MainLayout 
  title={`${resource.title} - Kelifax`} 
  description={`${resource.description} - Find this and more curated tech resources on Kelifax.`}
  currentPage="resources"
>
  <!-- Structured Data for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    "name": resource.title,
    "description": resource.description,
    "url": resource.url,
    "category": resource.category,
    "keywords": resource.tags.join(", "),
    "applicationCategory": resource.category === "development" ? "DeveloperApplication" : "ProductivityApplication",
    "operatingSystem": "Web, Windows, macOS, Linux",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD"
    }
  })} />

  <!-- Breadcrumb -->
  <section class="bg-gray-50 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center space-x-2 text-sm text-gray-600">
        <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <a href="/resources" class="hover:text-blue-600 transition-colors">Resources</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-900 capitalize">{resource.category}</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-500">{resource.title}</span>
      </nav>
    </div>
  </section>

  <!-- Resource Header -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Resource Image/Logo -->
          <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg mb-8 relative overflow-hidden flex items-center justify-center">
            {resource.image ? (
              <img 
                src={`/logos/${resource.image}`} 
                alt={resource.title}
                class="max-w-48 max-h-32 object-contain"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <div class="w-24 h-24 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                  <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                </div>
              </div>
            )}
            
            <!-- Category Badge -->
            <div class="absolute top-4 left-4">
              <span class="bg-blue-600 text-white text-sm font-semibold px-3 py-1 rounded-full capitalize">
                {resource.category}
              </span>
            </div>
            
            <!-- Featured Badge -->
            {resource.featured && (
              <div class="absolute top-4 right-4">
                <span class="bg-yellow-400 text-yellow-900 text-sm font-semibold px-3 py-1 rounded-full">
                  Featured
                </span>
              </div>
            )}
          </div>

          <!-- Resource Details -->
          <div class="space-y-6">
            <div>
              <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                {resource.title}
              </h1>
              <p class="text-xl text-gray-600 leading-relaxed">
                {resource.description}
              </p>
            </div>

            <!-- Tags -->
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Tags</h3>
              <div class="flex flex-wrap gap-2">
                {resource.tags.map((tag) => (
                  <span class="bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-md hover:bg-gray-200 transition-colors cursor-pointer">
                    {tag}
                  </span>
                ))}
              </div>
            </div>

            <!-- Key Features or Use Cases -->
            {resource.keyFeatures && (
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Key Features</h3>
                <ul class="space-y-3 text-gray-600">
                  {resource.keyFeatures.map((feature) => (
                    <li class="flex items-start space-x-3">
                      <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <div>
                        <strong class="text-gray-900">{feature.title}</strong>
                        <p class="text-sm text-gray-600 mt-1">{feature.description}</p>
                      </div>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Use Cases -->
            {resource.useCases && (
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Use Cases</h3>
                <ul class="space-y-2 text-gray-600">
                  {resource.useCases.map((useCase) => (
                    <li class="flex items-start space-x-2">
                      <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                      <span>{useCase}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Learning Resources -->
            {resource.learningResources && (
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Learning Resources</h3>
                <div class="space-y-3">
                  {resource.learningResources.map((learning) => (
                    <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors">
                      <div class="flex items-center justify-between">
                        <div>
                          <h4 class="font-semibold text-gray-900">{learning.title}</h4>
                          <span class="text-sm text-blue-600 bg-blue-50 px-2 py-1 rounded mt-1 inline-block">
                            {learning.type}
                          </span>
                        </div>
                        <a 
                          href={learning.url} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="flex items-center space-x-1 text-blue-600 hover:text-blue-800 transition-colors"
                        >
                          <span class="text-sm">Visit</span>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                          </svg>
                        </a>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Share Buttons -->
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Share this resource</h3>
              <div class="flex space-x-3">
                <button class="flex items-center space-x-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
                  </svg>
                  <span>Twitter</span>
                </button>
                
                <button class="flex items-center space-x-2 bg-blue-800 hover:bg-blue-900 text-white px-4 py-2 rounded-lg transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  <span>LinkedIn</span>
                </button>
                
                <button class="flex items-center space-x-2 bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z" />
                  </svg>
                  <span>Copy Link</span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="space-y-6">
            <!-- Visit Resource CTA -->
            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Access Resource</h3>
              <a 
                href={resource.url}
                target="_blank"
                rel="noopener noreferrer"
                class="w-full inline-flex items-center justify-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors mb-4"
              >
                Visit {resource.title}
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
              
              <div class="text-sm text-gray-600 space-y-2">
                <p class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Verified and curated
                </p>
                <p class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Regularly updated
                </p>
                <p class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Community recommended
                </p>
              </div>
            </div>

            <!-- Resource Info -->
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Resource Details</h3>
              <dl class="space-y-3">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Category</dt>
                  <dd class="text-sm text-gray-900 capitalize">{resource.category}</dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Total Tags</dt>
                  <dd class="text-sm text-gray-900">{resource.tags.length}</dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Status</dt>
                  <dd class="text-sm text-gray-900">
                    {resource.featured ? 'Featured Resource' : 'Active'}
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Added to Kelifax</dt>
                  <dd class="text-sm text-gray-900">Recently</dd>
                </div>
              </dl>
            </div>

            <!-- Report Issue -->
            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Found an issue?</h3>
              <p class="text-sm text-gray-600 mb-4">
                Help us keep our resources up to date by reporting any issues.
              </p>
              <button class="w-full bg-gray-100 hover:bg-gray-200 text-gray-900 font-medium py-2 px-4 rounded-lg transition-colors">
                Report Issue
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Resources -->
  {relatedResources.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">
          More {resource.category} resources
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedResources.map((related) => (
            <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
              <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-200 relative flex items-center justify-center">
                {related.image ? (
                  <img 
                    src={`/logos/${related.image}`} 
                    alt={related.title}
                    class="max-w-24 max-h-16 object-contain"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                      </svg>
                    </div>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">
                  <a href={`/resources/${related.slug}`} class="hover:text-blue-600 transition-colors">
                    {related.title}
                  </a>
                </h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  {related.description}
                </p>
                <a 
                  href={`/resources/${related.slug}`}
                  class="inline-flex items-center text-blue-600 hover:text-blue-700 text-sm font-medium"
                >
                  Learn more
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
</MainLayout>

<script>
  // Copy link functionality
  const copyButton = document.querySelector('button:has(svg + span:contains("Copy Link"))');
  if (copyButton) {
    copyButton.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(window.location.href);
        
        // Update button text temporarily
        const span = copyButton.querySelector('span');
        const originalText = span.textContent;
        span.textContent = 'Copied!';
        
        setTimeout(() => {
          span.textContent = originalText;
        }, 2000);
      } catch (err) {
        console.error('Failed to copy link:', err);
      }
    });
  }

  // Social sharing functionality
  const twitterButton = document.querySelector('button:has(span:contains("Twitter"))');
  if (twitterButton) {
    twitterButton.addEventListener('click', () => {
      const url = encodeURIComponent(window.location.href);
      const text = encodeURIComponent(document.title);
      window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
    });
  }

  const linkedinButton = document.querySelector('button:has(span:contains("LinkedIn"))');
  if (linkedinButton) {
    linkedinButton.addEventListener('click', () => {
      const url = encodeURIComponent(window.location.href);
      window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}`, '_blank');
    });
  }
</script>
