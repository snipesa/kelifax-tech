---
import { getCollection } from 'astro:content';

const baseUrl = 'https://kelifax.com';
const currentDate = new Date().toISOString();

// Static pages
const staticPages = [
  '',
  '/resources',
  '/insights',
  '/about',
  '/contact'
];

// Get insights pages
const insights = await getCollection('insights');
const insightPages = insights.map(insight => `/insights/${insight.slug}`);

// Fetch resource pages from API
let resourcePages = [];
try {
  const API_BASE_URL = import.meta.env.PUBLIC_API_URL || 'https://ds7z6al08j.execute-api.us-east-1.amazonaws.com/dev';
  const API_KEY = import.meta.env.PUBLIC_API_KEY;
  
  const response = await fetch(`${API_BASE_URL}/resources`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-Api-Key': API_KEY,
    },
    body: JSON.stringify({ 
      batchSize: 100, 
      category: 'all' 
    })
  });
  
  if (response.ok) {
    const data = await response.json();
    const resources = data.success && data.data ? data.data.resources : [];
    resourcePages = resources.map(resource => `/resource/${resource.slug}`);
  }
} catch (error) {
  console.error('Failed to fetch resources for sitemap:', error);
  // Continue with empty array if API fails
}

// All pages
const allPages = [...staticPages, ...insightPages, ...resourcePages];

export const prerender = true;

const sitemap = `<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
${allPages.map(page => `  <url>
    <loc>${baseUrl}${page}</loc>
    <lastmod>${currentDate}</lastmod>
    <changefreq>${page === '' ? 'daily' : page.includes('/resource/') ? 'weekly' : page.includes('/insights/') ? 'weekly' : 'monthly'}</changefreq>
    <priority>${page === '' ? '1.0' : page.includes('/resource/') || page.includes('/insights/') ? '0.8' : '0.7'}</priority>
  </url>`).join('\n')}
</urlset>`;

return new Response(sitemap, {
  headers: {
    'Content-Type': 'application/xml',
  },
});
---
