---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Admin - Kelifax" description="Admin panel for managing submitted resources">
  <main class="container mx-auto px-4 py-8">
    <!-- Authentication Form -->
    <div id="auth-section" class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Admin Access</h1>
      
      <form id="admin-auth-form" class="space-y-4">
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Enter admin password"
          />
        </div>
        
        <button 
          type="submit" 
          class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200"
        >
          Access Admin Panel
        </button>
      </form>

      <div id="auth-error" class="hidden mt-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-md">
        <p id="auth-error-text">Invalid password. Please try again.</p>
      </div>
    </div>

    <!-- Admin Panel -->
    <div id="admin-panel" class="hidden">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Admin Panel</h1>
        <button 
          id="sign-out-btn"
          class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition duration-200"
        >
          Sign Out
        </button>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-blue-50 p-6 rounded-lg border border-blue-200">
          <h3 class="text-lg font-semibold text-blue-800">Submitted Resources</h3>
          <p class="text-3xl font-bold text-blue-600" id="submitted-count">-</p>
        </div>
        <div class="bg-green-50 p-6 rounded-lg border border-green-200">
          <h3 class="text-lg font-semibold text-green-800">Approved Resources</h3>
          <p class="text-3xl font-bold text-green-600" id="approved-count">-</p>
        </div>
        <div class="bg-red-50 p-6 rounded-lg border border-red-200">
          <h3 class="text-lg font-semibold text-red-800">Rejected Resources</h3>
          <p class="text-3xl font-bold text-red-600" id="rejected-count">-</p>
        </div>
      </div>

      <!-- Filter Tabs -->
      <div class="mb-6">
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-8">
            <button 
              class="tab-button border-b-2 border-blue-500 text-blue-600 py-2 px-1 text-sm font-medium"
              data-status="submitted"
            >
              Submitted
            </button>
            <button 
              class="tab-button border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 py-2 px-1 text-sm font-medium"
              data-status="approved"
            >
              Approved
            </button>
            <button 
              class="tab-button border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 py-2 px-1 text-sm font-medium"
              data-status="rejected"
            >
              Rejected
            </button>
          </nav>
        </div>
      </div>

      <!-- Category Filter -->
      <div class="mb-6">
        <label for="category-filter" class="block text-sm font-medium text-gray-700 mb-2">
          Filter by Category
        </label>
        <select 
          id="category-filter" 
          class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
          <option value="">All Categories</option>
          <option value="development">Development</option>
          <option value="design">Design</option>
          <option value="productivity">Productivity</option>
          <option value="education">Education</option>
          <option value="communication">Communication</option>
          <option value="analytics">Analytics</option>
          <option value="marketing">Marketing</option>
          <option value="other">Other</option>
        </select>
      </div>

      <!-- Resources List -->
      <div id="resources-container" class="space-y-4">
        <div id="loading-spinner" class="text-center py-8">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
          <p class="text-gray-600 mt-2">Loading resources...</p>
        </div>
      </div>

      <!-- No Resources Message -->
      <div id="no-resources" class="hidden text-center py-12">
        <div class="text-gray-400 text-6xl mb-4">
          <svg class="mx-auto h-16 w-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-1">No resources found</h3>
        <p class="text-gray-500">No resources with the selected status.</p>
      </div>
    </div>
  </main>

  <script>
    import { authenticateAdmin, getResources, updateResourceStatus, deleteResource } from '../utils/api.js';

    let currentStatus = 'submitted';
    let currentCategory = '';
    let authToken = sessionStorage.getItem('adminToken');

    // Check if already authenticated
    if (authToken) {
      showAdminPanel();
    }

    // Authentication form handler
    document.getElementById('admin-auth-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const password = formData.get('password');

      try {
        const result = await authenticateAdmin(password);
        
        if (result.success) {
          authToken = result.token;
          sessionStorage.setItem('adminToken', authToken);
          hideAuthError();
          showAdminPanel();
        } else {
          showAuthError('Invalid password. Please try again.');
        }
      } catch (error) {
        console.error('Authentication error:', error);
        showAuthError('Authentication failed. Please try again.');
      }
    });

    // Sign out handler
    document.getElementById('sign-out-btn').addEventListener('click', () => {
      sessionStorage.removeItem('adminToken');
      authToken = null;
      showAuthSection();
    });

    // Tab switching
    document.querySelectorAll('.tab-button').forEach(button => {
      button.addEventListener('click', () => {
        currentStatus = button.dataset.status;
        updateActiveTab(button);
        applyFiltersAndLoad();
      });
    });
    
    // Category filter
    document.getElementById('category-filter').addEventListener('change', (e) => {
      currentCategory = e.target.value;
      applyFiltersAndLoad();
    });

    function showAuthSection() {
      document.getElementById('auth-section').classList.remove('hidden');
      document.getElementById('admin-panel').classList.add('hidden');
      document.getElementById('admin-auth-form').reset();
      hideAuthError();
    }

    function showAdminPanel() {
      document.getElementById('auth-section').classList.add('hidden');
      document.getElementById('admin-panel').classList.remove('hidden');
      applyFiltersAndLoad();
      loadStats();
    }

    function showAuthError(message) {
      document.getElementById('auth-error-text').textContent = message;
      document.getElementById('auth-error').classList.remove('hidden');
    }

    function hideAuthError() {
      document.getElementById('auth-error').classList.add('hidden');
    }

    function updateActiveTab(activeButton) {
      document.querySelectorAll('.tab-button').forEach(btn => {
        btn.classList.remove('border-blue-500', 'text-blue-600');
        btn.classList.add('border-transparent', 'text-gray-500');
      });
      
      activeButton.classList.remove('border-transparent', 'text-gray-500');
      activeButton.classList.add('border-blue-500', 'text-blue-600');
    }

    async function loadStats() {
      try {
        const allResources = await getResources({}, authToken);
        
        const stats = allResources.reduce((acc, resource) => {
          acc[resource.status] = (acc[resource.status] || 0) + 1;
          return acc;
        }, {});

        document.getElementById('submitted-count').textContent = stats.submitted || 0;
        document.getElementById('approved-count').textContent = stats.approved || 0;
        document.getElementById('rejected-count').textContent = stats.rejected || 0;
      } catch (error) {
        console.error('Error loading stats:', error);
      }
    }

    function applyFiltersAndLoad() {
      const filters = {
        status: currentStatus
      };
      
      if (currentCategory) {
        filters.category = currentCategory;
      }
      
      loadResources(filters);
    }
    
    async function loadResources(filters) {
      const container = document.getElementById('resources-container');
      const loading = document.getElementById('loading-spinner');
      const noResources = document.getElementById('no-resources');

      // Show loading
      container.innerHTML = '';
      container.appendChild(loading);
      noResources.classList.add('hidden');

      try {
        const resources = await getResources(filters, authToken);
        
        // Hide loading
        loading.remove();

        if (resources.length === 0) {
          noResources.classList.remove('hidden');
          return;
        }

        // Client-side category filtering if needed (if API doesn't support it yet)
        let filteredResources = resources;
        if (filters.category && filters.category !== '') {
          filteredResources = resources.filter(resource => 
            (resource.category === filters.category) || 
            (!resource.category && filters.category === 'development') // Default to development for legacy resources
          );
        }

        if (filteredResources.length === 0) {
          noResources.classList.remove('hidden');
          return;
        }

        // Render resources
        filteredResources.forEach(resource => {
          const resourceCard = createResourceCard(resource);
          container.appendChild(resourceCard);
        });

      } catch (error) {
        console.error('Error loading resources:', error);
        loading.remove();
        container.innerHTML = '<div class="text-center py-8 text-red-600">Error loading resources. Please try again.</div>';
      }
    }

    function createResourceCard(resource) {
      const card = document.createElement('div');
      card.className = 'bg-white rounded-lg shadow-md p-6 border border-gray-200';
      
      card.innerHTML = `
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="text-xl font-semibold text-gray-800">${escapeHtml(resource.title || resource.resourceName)}</h3>
            <p class="text-gray-600 mt-1">${escapeHtml(resource.description || resource.usagePurpose)}</p>
          </div>
          <span class="px-3 py-1 text-xs font-medium rounded-full ${getStatusColor(resource.status)}">
            ${resource.status.toUpperCase()}
          </span>
        </div>
        
        <div class="space-y-2 mb-4">
          <p class="text-sm text-gray-700"><strong>URL:</strong> <a href="${escapeHtml(resource.url || resource.resourceUrl)}" target="_blank" class="text-blue-600 hover:underline">${escapeHtml(resource.url || resource.resourceUrl)}</a></p>
          <p class="text-sm text-gray-700"><strong>Email:</strong> ${escapeHtml(resource.companyEmail || 'N/A')}</p>
          <p class="text-sm text-gray-700"><strong>Category:</strong> ${escapeHtml(resource.category || 'development')}</p>
          <p class="text-sm text-gray-700"><strong>Tags:</strong> ${Array.isArray(resource.tags) && resource.tags.length > 0 ? resource.tags.map(tag => `<span class="inline-block bg-gray-100 text-gray-800 text-xs px-2 py-1 rounded mr-1 mb-1">${escapeHtml(tag)}</span>`).join('') : 'None'}</p>
          <p class="text-sm text-gray-700"><strong>Submitted:</strong> ${new Date(resource.submissionTimestamp || Date.now()).toLocaleDateString()}</p>
        </div>
        
        <div class="flex gap-2">
          ${resource.status === 'submitted' ? `
            <button onclick="updateStatus('${resource.resourceSlug}', 'approved')" class="px-3 py-1 bg-green-600 text-white text-sm rounded hover:bg-green-700">
              Approve
            </button>
            <button onclick="updateStatus('${resource.resourceSlug}', 'rejected')" class="px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700">
              Reject
            </button>
          ` : ''}
          <button onclick="deleteResourceById('${resource.resourceSlug}')" class="px-3 py-1 bg-gray-600 text-white text-sm rounded hover:bg-gray-700">
            Delete
          </button>
        </div>
      `;
      
      return card;
    }

    function getStatusColor(status) {
      switch (status) {
        case 'approved': return 'bg-green-100 text-green-800';
        case 'rejected': return 'bg-red-100 text-red-800';
        case 'submitted': return 'bg-yellow-100 text-yellow-800';
        default: return 'bg-gray-100 text-gray-800';
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Global functions for card actions
    window.updateStatus = async (resourceSlug, newStatus) => {
      try {
        await updateResourceStatus(resourceSlug, newStatus, authToken);
        applyFiltersAndLoad();
        loadStats();
      } catch (error) {
        console.error('Error updating status:', error);
        alert('Failed to update resource status. Please try again.');
      }
    };

    window.deleteResourceById = async (resourceSlug) => {
      if (confirm('Are you sure you want to delete this resource? This action cannot be undone.')) {
        try {
          await deleteResource(resourceSlug, authToken);
          applyFiltersAndLoad();
          loadStats();
        } catch (error) {
          console.error('Error deleting resource:', error);
          alert('Failed to delete resource. Please try again.');
        }
      }
    };
  </script>
</MainLayout>
