---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Submit Resource - Kelifax" description="Submit a new tech resource to Kelifax platform">
  <main class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2">Submit Resource</h1>
      <p class="text-gray-600 mb-8">Share a valuable tech resource with the community. All submissions are reviewed before publishing.</p>
      
      <form id="submit-resource-form" class="space-y-6">
        <div>
          <label for="resourceName" class="block text-sm font-medium text-gray-700 mb-2">
            Resource Name <span class="text-red-500">*</span>
          </label>
          <input 
            type="text" 
            id="resourceName" 
            name="resourceName" 
            maxlength="50"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="e.g., GitHub"
          />
          <p class="text-sm text-gray-500 mt-1">Maximum 50 characters</p>
        </div>

        <div>
          <label for="usagePurpose" class="block text-sm font-medium text-gray-700 mb-2">
            Usage Purpose <span class="text-red-500">*</span>
          </label>
          <input 
            type="text" 
            id="usagePurpose" 
            name="usagePurpose" 
            maxlength="100"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="e.g., Version control and code collaboration"
          />
          <p class="text-sm text-gray-500 mt-1">Maximum 100 characters</p>
        </div>

        <div>
          <label for="resourceUrl" class="block text-sm font-medium text-gray-700 mb-2">
            URL <span class="text-red-500">*</span>
          </label>
          <input 
            type="url" 
            id="resourceUrl" 
            name="resourceUrl" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="https://github.com"
          />
          <p class="text-sm text-gray-500 mt-1">Please provide a valid URL</p>
        </div>

        <div>
          <label for="companyEmail" class="block text-sm font-medium text-gray-700 mb-2">
            Company Email <span class="text-red-500">*</span>
          </label>
          <input 
            type="email" 
            id="companyEmail" 
            name="companyEmail" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="contact@company.com"
          />
          <p class="text-sm text-gray-500 mt-1">We'll use this to contact you about your submission</p>
        </div>

        <div class="flex gap-4">
          <button 
            type="submit" 
            class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200"
          >
            Submit Resource
          </button>
          <button 
            type="button" 
            onclick="window.history.back()"
            class="flex-1 bg-gray-300 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200"
          >
            Cancel
          </button>
        </div>
      </form>

      <!-- Success Message -->
      <div id="success-message" class="hidden mt-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-md">
        <h3 class="font-semibold">Resource Submitted Successfully!</h3>
        <p>Thank you for your submission. We'll review it and get back to you soon.</p>
      </div>

      <!-- Error Message -->
      <div id="error-message" class="hidden mt-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md">
        <h3 class="font-semibold">Submission Failed</h3>
        <p id="error-text">Please try again or contact support if the problem persists.</p>
      </div>
    </div>
  </main>

  <script>
    import { submitResource } from '../utils/api.js';

    document.getElementById('submit-resource-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const resourceData = {
        resourceName: formData.get('resourceName').trim(),
        usagePurpose: formData.get('usagePurpose').trim(),
        resourceUrl: formData.get('resourceUrl').trim(),
        companyEmail: formData.get('companyEmail').trim()
      };

      // Hide previous messages
      document.getElementById('success-message').classList.add('hidden');
      document.getElementById('error-message').classList.add('hidden');

      // Validate form data
      if (!resourceData.resourceName || !resourceData.usagePurpose || !resourceData.resourceUrl || !resourceData.companyEmail) {
        showError('Please fill in all required fields.');
        return;
      }

      if (resourceData.resourceName.length > 50) {
        showError('Resource name must be 50 characters or less.');
        return;
      }

      if (resourceData.usagePurpose.length > 100) {
        showError('Usage purpose must be 100 characters or less.');
        return;
      }

      // URL validation
      try {
        new URL(resourceData.resourceUrl);
      } catch {
        showError('Please provide a valid URL.');
        return;
      }

      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(resourceData.companyEmail)) {
        showError('Please provide a valid email address.');
        return;
      }

      try {
        const submitButton = e.target.querySelector('button[type="submit"]');
        submitButton.disabled = true;
        submitButton.textContent = 'Submitting...';

        await submitResource(resourceData);
        
        // Show success message and reset form
        document.getElementById('success-message').classList.remove('hidden');
        e.target.reset();
        
        // Scroll to success message
        document.getElementById('success-message').scrollIntoView({ behavior: 'smooth' });
        
      } catch (error) {
        console.error('Submission error:', error);
        showError(error.message || 'An error occurred while submitting the resource.');
      } finally {
        const submitButton = e.target.querySelector('button[type="submit"]');
        submitButton.disabled = false;
        submitButton.textContent = 'Submit Resource';
      }
    });

    function showError(message) {
      document.getElementById('error-text').textContent = message;
      document.getElementById('error-message').classList.remove('hidden');
      document.getElementById('error-message').scrollIntoView({ behavior: 'smooth' });
    }
  </script>
</MainLayout>
