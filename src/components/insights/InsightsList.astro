---
// InsightsList component for displaying multiple insights
import InsightCard from './InsightCard.astro';

export interface Props {
  insights: any[];
  showFeatured?: boolean;
  limit?: number;
  title?: string;
  description?: string;
}

const { 
  insights, 
  showFeatured = false, 
  limit,
  title = "Latest Insights",
  description = "In-depth guides, reviews, and comparisons to help you choose the right tools"
} = Astro.props;

// Filter and limit insights
let displayInsights = insights;

if (showFeatured) {
  displayInsights = insights.filter(insight => insight.data.featured);
}

if (limit) {
  displayInsights = displayInsights.slice(0, limit);
}

// Get the first insight for featured display
const featuredInsight = displayInsights.find(insight => insight.data.featured) || displayInsights[0];
const otherInsights = displayInsights.filter(insight => insight.slug !== featuredInsight?.slug).slice(0, 3);
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {description}
      </p>
    </div>
    
    {displayInsights.length > 0 && (
      <>
        <!-- Featured Insight (Large Card) -->
        {featuredInsight && (
          <div class="mb-12">
            <InsightCard insight={featuredInsight} size="large" />
          </div>
        )}
        
        <!-- Recent Insights Grid -->
        {otherInsights.length > 0 && (
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            {otherInsights.map(insight => (
              <InsightCard insight={insight} size="medium" />
            ))}
          </div>
        )}
        
        <!-- CTA Button -->
        <div class="text-center">
          <a 
            href="/insights" 
            class="bg-blue-600 text-white hover:bg-blue-700 font-semibold py-3 px-8 rounded-lg transition-colors inline-flex items-center gap-2"
          >
            View All Insights
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </>
    )}
    
    {displayInsights.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">No insights available yet. Check back soon!</p>
      </div>
    )}
  </div>
</section>
