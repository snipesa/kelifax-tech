---
export interface Props {
  slug: string;
  title: string;
  description: string;
  category: string;
  tags: string[];
  url: string;
  image?: string;
  featured?: boolean;
  keyFeatures?: Array<{
    title: string;
    description: string;
  }>;
  useCases?: string[];
  learningResources?: Array<{
    title: string;
    url: string;
    type: string;
  }>;
}

const { 
  slug,
  title, 
  description, 
  category, 
  tags, 
  url, 
  image, 
  featured = false,
  keyFeatures,
  useCases,
  learningResources
} = Astro.props;

// Check if this is an enhanced resource
const isEnhanced = keyFeatures || useCases || learningResources;
---

<div class={`bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border ${featured ? 'border-blue-200' : 'border-gray-200'} ${isEnhanced ? 'ring-2 ring-green-100' : ''}`}>
  <!-- Enhanced Badge -->
  {isEnhanced && (
    <div class="bg-gradient-to-r from-green-500 to-emerald-500 text-white text-center py-2">
      <span class="text-sm font-semibold flex items-center justify-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        Enhanced Resource
      </span>
    </div>
  )}

  <!-- Resource Image -->
  <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-200 relative overflow-hidden">
    {image ? (
      <img 
        src={`/logos/${image}`} 
        alt={`${title} logo`}
        class="w-full h-full object-contain p-4"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <div class="w-20 h-20 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
        </div>
      </div>
    )}
    
    <!-- Category Badge -->
    <div class="absolute top-4 left-4">
      <span class="bg-blue-600 text-white text-sm font-semibold px-3 py-1 rounded-full capitalize">
        {category}
      </span>
    </div>
    
    <!-- Featured Badge -->
    {featured && (
      <div class="absolute top-4 right-4">
        <span class="bg-yellow-400 text-yellow-900 text-sm font-semibold px-3 py-1 rounded-full">
          Featured
        </span>
      </div>
    )}
  </div>

  <!-- Resource Content -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-1">
      <a href={`/resource/${slug}`} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h3>
    
    <p class="text-gray-600 text-sm mb-4 line-clamp-2">
      {description}
    </p>

    <!-- Key Features Preview -->
    {keyFeatures && keyFeatures.length > 0 && (
      <div class="mb-4 p-3 bg-gray-50 rounded-lg">
        <div class="text-xs font-semibold text-gray-700 mb-2">Key Features:</div>
        <div class="space-y-1">
          {keyFeatures.slice(0, 3).map((feature) => (
            <div class="flex items-start space-x-2">
              <svg class="w-3 h-3 text-green-500 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-xs text-gray-600 line-clamp-1">{feature.title}</span>
            </div>
          ))}
          {keyFeatures.length > 3 && (
            <div class="text-xs text-gray-500">+{keyFeatures.length - 3} more features</div>
          )}
        </div>
      </div>
    )}

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.slice(0, 4).map((tag) => (
        <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded-md">
          {tag}
        </span>
      ))}
      {tags.length > 4 && (
        <span class="bg-gray-100 text-gray-500 text-xs px-2 py-1 rounded-md">
          +{tags.length - 4}
        </span>
      )}
    </div>

    <!-- Learning Resources Count -->
    {learningResources && learningResources.length > 0 && (
      <div class="mb-4 text-xs text-blue-600 bg-blue-50 px-3 py-2 rounded-lg">
        ðŸ“š {learningResources.length} learning resources available
      </div>
    )}

    <!-- Action Buttons -->
    <div class="flex items-center justify-between">
      <div class="flex space-x-2">
        <a 
          href={`/resource/${slug}`}
          class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-900 text-sm font-medium rounded-lg transition-colors"
        >
          Details
        </a>
        <a 
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors"
        >
          Visit
          <svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
      
      <button class="text-gray-400 hover:text-red-500 transition-colors" title="Add to favorites">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
