---
import { getApprovedLogoUrl } from '../utils/s3-utils.js';

export interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description = "Kelifax - Curated tech resources platform for developers, students, and tech enthusiasts", currentPage } = Astro.props;
const kelifaxLogoUrl = getApprovedLogoUrl('kelifax.png');

import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={kelifaxLogoUrl} />
    <link rel="apple-touch-icon" href={kelifaxLogoUrl} />
    <link rel="manifest" href="/manifest.json" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <meta name="keywords" content="developer tools, tech resources, programming, web development, coding tools, software development, learning resources" />
    <meta name="author" content="Kelifax" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={Astro.url} />
    
    <!-- Open Graph Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={kelifaxLogoUrl} />
    <meta property="og:site_name" content="Kelifax" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={kelifaxLogoUrl} />
    
    <!-- Additional Favicon Sizes -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@kelifax" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#3b82f6" />
    <meta name="msapplication-TileColor" content="#3b82f6" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- DNS Prefetch for external resources -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    
    <!-- Alpine.js for interactive components -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    <Header currentPage={currentPage} />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
